@model IEnumerable<SOEN341InstagramReplica.Models.UserPost>

@{
                /**/

                ViewBag.Title = "MyFavourites";
}

<h2>My Favourites</h2>

<table class="table">
    <tr>
        <th>
            Username
        </th>
        <th>
            Favourited Post
        </th>
        <th>
            Link to Post
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.User.Username, "Details2", "Users", new { id = item.User_ID}, null)
            </td>
            @if (item.POST != null)
            {
                <td>


                    @{var base64 = Convert.ToBase64String(item.POST);
                        var imgsrc = string.Format("data:image/png;base64,{0}", base64);


                        <img src='@imgsrc' style="max-width:50px;max-height:50px" />
                    }

                </td>
                <td>
                    @Html.ActionLink("View Post", "Details2", "UserPosts", new { id = item.ID }, null)
                </td>
            }
        </tr>
    }
</table>